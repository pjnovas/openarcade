{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "prettier",
    "prettier/react"
  ],
  "plugins": [
    "react"
  ],
  "settings": {
    "react": {
      "version": "16.0"
    }
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true,
      "modules": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node" : true,
    "jest": true
  },
  "rules": {
    "quotes": ["error", "single"],
    "no-unused-vars": "error",
    "default-case": "off"
  }
}
